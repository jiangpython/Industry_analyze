# 数据库配置
DATABASE_URL=postgresql://user:password@localhost/financial_db
# 或者使用SQLite（开发阶段）
# DATABASE_URL=sqlite:///./data/financial.db

# Redis配置
REDIS_URL=redis://localhost:6379

# Gemini API配置
GEMINI_API_KEY=your_gemini_api_key_here

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 应用配置
DEBUG=True
SECRET_KEY=your_secret_key_here

# 爬虫配置
CRAWLER_DELAY=1
CRAWLER_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# 任务配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 数据源配置
# 东方财富
EASTMONEY_BASE_URL=http://f10.eastmoney.com
# 同花顺
THS_BASE_URL=http://basic.10jqka.com.cn
# 国家统计局
STATS_BASE_URL=http://www.stats.gov.cn 